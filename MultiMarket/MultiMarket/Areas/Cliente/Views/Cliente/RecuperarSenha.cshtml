@model MultiMarket.Models.Cliente
@{
    ViewData["Title"] = "Recuperar senha";
}
<br />

<main role="main">
    <br />
    <br />
    <section class="container">
        <aside class="col-sm-4">
            <h3 class="subtitle-doc">
                Recupere sua senha
            </h3>
            <div id="code_login_1">
                <div class="card">
                    <article class="card-body">
                        <h4 class="card-title mb-4 mt-1">Digite seu e-mail</h4>
                        @{ if (ViewData["MSG_E"] != null)
                            {
                                <p class="alert alert-danger">@Html.Raw(ViewData["MSG_E"])</p>
                            }
                        }
                        <form method="post" asp-action="recuperarsenha" asp-controller="cliente" asp-route-returnUrl="@Context.Request.Query["returnUrl"]">
                            <div class="form-group">
                                <label>E-mail</label>
                                <input asp-for="Email" class="form-control" placeholder="Email" type="email">
                                <span asp-validation-for="Email" class="erro"></span>
                            </div> 
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Enviar </button>
                            </div> 
                        </form>
                    </article>
                </div> <!-- card.// -->
            </div> <!-- code-wrap.// -->
        </aside>
    </section>

</main>

