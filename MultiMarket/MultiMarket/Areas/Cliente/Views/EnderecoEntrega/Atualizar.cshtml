@model MultiMarket.Models.EnderecoEntrega
@{
    ViewData["Title"] = "Atualizar";
}
@if (TempData["MSG_S"] != null)
{
    <br />
    <br />
    <div style="text-align:center">
        <p class="alert alert-success" style="width:80%;">@TempData["MSG_S"]</p>
    </div>
}
<form asp-action="Atualizar" asp-controller="EnderecoEntrega" method="post">
    <main role="main">
        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>
                    <h3 class="subtitle-doc">
                        Atualizar endereço
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <h4 class="card-title mt-2">Adicionar</h4>
                            </header>
                            <article class="card-body">
                                <div class="form-group">
                                    <label for="Nome">Nome</label>
                                    <input class="form-control" asp-for="Nome" type="text">
                                    <span asp-validation-for="Nome" class="erro"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CEP">CEP</label>
                                    <input class="form-control cep" asp-for="CEP" type="text">
                                    <span asp-validation-for="CEP" class="erro"></span>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Estado">Estado</label>
                                        <input type="text" asp-for="Estado" readonly class="form-control">
                                        <span asp-validation-for="Estado" class="erro"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="Cidade">Cidade</label>
                                        <input class="form-control" readonly asp-for="Cidade" type="text">
                                        <span asp-validation-for="Cidade" class="erro"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Rua">Rua</label>
                                        <input type="text" readonly asp-for="Rua" class="form-control">
                                        <span asp-validation-for="Rua" class="erro"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="Bairro">Bairro</label>
                                        <input class="form-control" readonly asp-for="Bairro" type="text">
                                        <span asp-validation-for="Bairro" class="erro"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Complemento">Complemento</label>
                                        <input type="text" asp-for="Complemento" class="form-control">
                                        <span asp-validation-for="Complemento" class="erro"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="Numero">Numero</label>
                                        <input class="form-control" asp-for="Numero" type="number">
                                        <span asp-validation-for="Numero" class="erro"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block">Atualizar</button>

                                </div> <!-- form-group// -->
                            </article> <!-- card-body end .// -->

                        </div> <!-- card.// -->

                    </div> <!-- code-wrap.// -->
                </aside>
            </div>
        </section>
    </main>
</form>



