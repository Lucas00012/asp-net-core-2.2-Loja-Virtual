@model MultiMarket.Models.Cliente;
@{
    ViewData["Title"] = "Login";
}


<main role="main">
    <br />
    <br />
    <section class="container">
        <aside class="col-sm-4">
            <h3 class="subtitle-doc">
                Faça seu login
            </h3>
            <div id="code_login_1">
                <div class="card">
                    <article class="card-body">
                        <a asp-action="CadastroCliente" asp-controller="Home" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" class="float-right btn btn-outline-primary">Registre-se</a>
                        <h4 class="card-title mb-4 mt-1">Entrar</h4>
                        @{ if (ViewData["MSG_E"] != null)
                            {
                                <p class="alert alert-danger">@Html.Raw(ViewData["MSG_E"])</p>
                            }
                        }
                        @{ if (TempData["MSG_S"] != null)
                            {
                                <p class="alert alert-success">@Html.Raw(TempData["MSG_S"])</p>
                            }
                        }
                        <form method="post" asp-action="Login" asp-controller="Home" asp-route-returnUrl="@Context.Request.Query["returnUrl"]">
                            <div class="form-group">
                                <label>E-mail</label>
                                <input asp-for="Email" class="form-control" placeholder="Email" type="email">
                            </div> <!-- form-group// -->
                            <div class="form-group">
                                <a class="float-right" asp-action="RecuperarSenha" asp-controller="Cliente">Esqueci a senha</a>
                                <label>Senha</label>
                                <input asp-for="Senha" class="form-control" placeholder="******" type="password">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Login </button>
                            </div> <!-- form-group// -->
                        </form>
                    </article>
                </div> <!-- card.// -->
            </div> <!-- code-wrap.// -->
        </aside>
    </section>

</main>

