@using MultiMarket.Models
@model NewsletterEmail;
@{
    ViewData["Title"] = "Index";
}

    <main role="main">

        <div id="myCarousel" class="carousel slide sombra" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="first-slide" src="~/img/fundo5.png"
                         alt="First slide">
                    <div class="container">
                        <div class="carousel-caption text-left">
                            <h1 class="">Aqui você encontra os melhores preços</h1>
                            <p class="sombra">
                                Sempre procuramos trabalhar com os menores valores e<br />
                                o melhor atendimento
                                
                            </p>
                            <p><a class="btn btn-lg btn-primary" href="/cliente/home/cadastrocliente" role="button">Cadastre-se agora</a></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="second-slide" src="~/img/fundo5.png"
                         alt="Second slide">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1 class="">Sistema de segurança</h1>
                            <p class="">
                                Utilizamos as melhores ferramentas para proteger seus dados de invasores
                            </p>
                            <p><a class="btn btn-lg btn-primary" href="#" role="button">Leia mais</a></p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="third-slide" src="~/img/fundo5.png"
                         alt="Third slide">
                    <div class="container">
                        <div class="carousel-caption text-right">
                            <h1 class="">Faça parte da equipe</h1>
                            <p class="">
                                Consulte as vagas em aberto e trabalhe conosco!
                            </p>
                            <p><a class="btn btn-lg btn-primary" href="#" role="button">Consultar</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        @if (TempData["MSG_E"] != null)
        {
            <div class="container text-center">
                <p class="alert alert-danger">@TempData["MSG_E"]</p>
            </div>
        }
        @await Component.InvokeAsync("Produto")
    </main>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @action = Url.Action("Index", "Home") + "#send" }))
{
    <div id="Cnewsletter">
        @{ if (TempData["MSG_S"] != null)
            {
                <p class="alert alert-success">@TempData["MSG_S"]</p>
            }
        }
        <p class="oi" id="send"><label for="send">Digite seu e-mail para receber novidades</label></p>

        <div class="newsletter">
            <input type="text" placeholder="" class="form-control col-sm-6" asp-for="Email" />
            &ensp;<button class="btn btn-primary">Enviar</button><br />
        </div>

        <p style="text-align:center"><span style="color:red" asp-validation-for="Email"></span></p>
    </div>
}